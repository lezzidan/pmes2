			generate_workergs_sh_MN "@QUEUE_SUBMIT_LL@"
		fi
	else 
		if ! test x"@QUEUE_SUBMIT_PBS@" = x"none" ; then
			generate_workergs_sh_MN "@QUEUE_SUBMIT_PBS@"
		else
			generate_workergs_sh_MN "@QUEUE_SUBMIT_LL@"
		fi
	fi

	@LN_S@ -f ${appname}-worker workerGS
}

