        gsprefix=$1
        appname=$2
        if test -d gsbuild ; then
                echo "The gsbuild directory already exists from a previous build. Removing."
                @RM@ -rf gsbuild
        fi

        @MKDIR@ gsbuild
        cd gsbuild
        @LN_S@ -f ../*.c .
        @LN_S@ -f ../*.cc .
        @LN_S@ -f ../*.cpp .
        @LN_S@ -f ../*.cxx .
        @LN_S@ -f ../*.idl .
        @LN_S@ -f ../*.h .
